#								ADSYN Makef
# macros defined in toplevel csound/Makefile
#	CFLAGS INCLUDE LIB DEST

INCLUDE	= @includedir@
LIB	= @datadir@
DEST	= @bindir@
CFLAGS  = @CFLAGS@ @XCFLAGS@ $(DEFINES)
LIBS    = @WINLDFLAGS@ @X_LIBS@ @LIBS@

T = ../..
INC = ../../H

OBJS =  het_main.@OBJEXT@ $T/hetro.@OBJEXT@ $T/filopen.@OBJEXT@ \
	$T/sfheader.@OBJEXT@ $T/soundin.@OBJEXT@ \
	$T/memalloc.@OBJEXT@ $T/memfiles.@OBJEXT@ \
	$T/window.@OBJEXT@ $T/winFLTK.@OBJEXT@ \
	$T/FL_graph.@OBJEXT@ $T/winEPS.@OBJEXT@ $T/aifc.@OBJEXT@ \
	$T/winascii.@OBJEXT@ $T/sdif.@OBJEXT@ $T/sdif-mem.@OBJEXT@ \
	$T/getstring.@OBJEXT@ $T/natben.@OBJEXT@

adsyns:	hetro

hetro:	$(OBJS)
	@CC@ $(CFLAGS) -o hetro $(OBJS) $(LIBS)

install: hetro
	-strip hetro
	-rm -f $(DEST)/hetro
	cp hetro $(DEST)

het_main.@OBJEXT@: $(INC)/ustub.h $(INC)/cs.h het_main.c
	@CC@ -I $(INC) $(CFLAGS) -c het_main.c

clean:
	-rm -f hetro

rmbak:
	-rm *.bak *~
