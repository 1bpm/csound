#								ADSYN Makef
# macros defined in toplevel csound/Makefile
#	CFLAGS INCLUDE LIB DEST

INCLUDE	= @includedir@
LIB	= @datadir@
DEST	= @bindir@
CFLAGS = @CFLAGS@ @XCFLAGS@ $(DEFINES)
LIBS    = @WINLDFLAGS@ @X_LIBS@ @LIBS@

T = ../..
INC = ../../H

OBJS =  cvl_main.@OBJEXT@ $T/cvanal.@OBJEXT@ $T/fft.@OBJEXT@ $T/dsputil.@OBJEXT@ \
	$T/filopen.@OBJEXT@ $T/memalloc.@OBJEXT@ $T/window.@OBJEXT@ \
	$T/getstring.@OBJEXT@ $T/winFLTK.@OBJEXT@ $T/FL_graph.@OBJEXT@ \
	$T/winEPS.@OBJEXT@ $T/winascii.@OBJEXT@ 

cvl:	cvanal

cvanal:	$(OBJS)
	@CC@ $(CFLAGS) -o cvanal $(OBJS) $(LIBS)

install: cvanal
	-strip cvanal
	-rm -f $(DEST)/cvanal
	cp cvanal $(DEST)

cvl_main.@OBJEXT@: $(INC)/ustub.h $(INC)/cs.h cvl_main.c
	@CC@ -I $(INC) $(CFLAGS) -c cvl_main.c

clean:
	-rm -f cvanal

rmbak:
	-rm *.bak *~
