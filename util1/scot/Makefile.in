#								SCOT makef
# macros defined in toplevel csound/Makefile
#	CFLAGS INCLUDE LIB DEST

INCLUDE	= @includedir@
LIB	= @datadir@
DEST	= @bindir@
CFLAGS  = @CFLAGS@ @XCFLAGS@ $(DEFINES)
LIBS    = @WINLDFLAGS@ @X_LIBS@ @LIBS@

T = ../..

OBJS =  scot_main.@OBJEXT@ $T/scot.@OBJEXT@ $T/getstring.@OBJEXT@

scots:  scot

scot:	$(OBJS)
	@CC@ -o scot $(OBJS)

scot_main.@OBJEXT@:		scot_main.c
	@CC@ -I ../../H $(CFLAGS) -c scot_main.c

install:	scot
	-strip scot
	-rm -f $(DEST)/scot
	cp scot $(DEST)

clean:
	-rm scot *.@OBJEXT@

rmbak:
	-rm *.bak *~
